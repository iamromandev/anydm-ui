{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "lib": [
            "ESNext",
            "DOM",
            "WebWorker",
            "DOM.Iterable"
        ],
        "moduleResolution": "bundler",
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "incremental": true,
        "isolatedModules": true,
        "jsx": "react-jsx",
        "jsxImportSource": "@qwik.dev/core",
        "noEmit": true,
        "outDir": "dist",
        "paths": {
            "@/*": [
                "./src/*"
            ]
        },
        "plugins": [
            {
                "name": "typescript-plugin-css-modules"
            }
        ]
    },
    "include": [
        "src",
        "./*.d.ts",
        "./*.config.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}
